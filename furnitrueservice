  <script>
    // ====== 这里按需修改 ======
    const toEmail = "furnitureservice03@outlook.com";
    const subject = "After-Sales Service";
    const body =
`Hello,

I need help with my order.

Order ID:
Issue:
Photos:

Thank you.`;

    // URL 编码（非常重要）
    function encodeMailto(text){
      return encodeURIComponent(text).replace(/%20/g, "%20");
    }

    const mailtoLink =
      `mailto:${toEmail}?subject=${encodeMailto(subject)}&body=${encodeMailto(body)}`;

    // 设置按钮链接
    document.getElementById("emailBtn").href = mailtoLink;

    // 显示邮箱
    document.getElementById("emailText").textContent = toEmail;

    // 复制邮箱
    document.getElementById("copyBtn").addEventListener("click", async () => {
      try{
        await navigator.clipboard.writeText(toEmail);
        const btn = document.getElementById("copyBtn");
        const old = btn.textContent;
        btn.textContent = "Copied ✓";
        setTimeout(()=>btn.textContent=old, 1500);
      }catch(e){
        alert("Copy failed. Please copy manually: " + toEmail);
      }
    });

    // 可选：页面打开后自动弹出邮件（某些浏览器会拦截）
    // 建议保留按钮点击方式更稳定
    // window.location.href = mailtoLink;
  </script>
